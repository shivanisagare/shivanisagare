#include<stdio.h>
int main(){
	int m,n,i,j;
	float temp,tp=0;
	printf("enter the no of objects:");
	scanf("%d",&n);
	printf("\nenter the capacity of sack:");
	scanf("%d",&m);
	int p[n];
	int w[n];
	float r[n];
	for(i=0;i<n;i++){
	   printf("enter the profit & weight of %d th object:\n",i+1);
	   scanf("%d%d",&p[i],&w[i]);	
	}
	for(i=0;i<n;i++){
		r[i]=p[i]/w[i];
	}
	for(i=0;i<n;i++){
		for(j=i+1;j<n;j++){
			if(r[i]>r[j]){
			temp=r[i];
			r[i]=r[j];
			r[j]=temp;	
			}
		}
	}
	for(i=0;i<n;i++){
		if(m>0&&w[i]<=m){
			m=m-w[i];
			tp=tp+p[i];
		}else{
			break;
		}
		if(m>0&&w[i]>m){
			tp=tp+(p[i]*((float)m/w[i]));
		}
	}
	printf("\nthe total profit:%f",tp);
}
